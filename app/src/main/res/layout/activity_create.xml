<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal"
    tools:context="com.applid.milijunas_2021.CreateActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/podjeli_svoja_pitanja_sa_drugim_igra_ima"
                android:textSize="21sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/goldYellow"
                android:background="#77000000"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/questions_box_border"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@android:color/white"
                android:maxLength="120"
                android:lines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/create_a"
                        android:background="@drawable/money_border"
                        android:layout_width="1dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:tag="1"
                        android:gravity="center"
                        android:maxLength="40"/>

                    <EditText
                        android:id="@+id/create_b"
                        android:background="@drawable/money_border"
                        android:layout_width="1dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:tag="1"
                        android:gravity="center"
                        android:maxLength="40"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/create_c"
                        android:background="@drawable/money_border"
                        android:layout_width="1dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:tag="1"
                        android:gravity="center"
                        android:maxLength="40"/>

                    <EditText
                        android:id="@+id/create_d"
                        android:background="@drawable/money_border"
                        android:layout_width="1dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:tag="1"
                        android:gravity="center"
                        android:maxLength="40"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/exitCreate"
                        android:background="@drawable/wrong_answer"
                        android:layout_width="1dp"
                        android:padding="5dp"
                        android:text="@string/cancel"
                        android:onClick="exitCreate"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sendQuestion"
                        android:background="@drawable/correct_answer"
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:text="@string/correctAnswer"
                        android:onClick="sendQuestion"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

    </LinearLayout>



    </LinearLayout>
</LinearLayout>