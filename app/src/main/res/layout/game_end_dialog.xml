<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="8">

    
    <ImageView
        android:layout_width="70dp"
        android:background="@drawable/ipad__nexus_9__1"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:layout_height="70dp" />
    
    
    <TextView
        android:id="@+id/desc_view"
        android:background="@drawable/questions_box_border"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="3"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textColor="#ffffffff"/>

    <TextView
        android:id="@+id/desc_won"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="1.5"
        android:background="@drawable/black_border_button"
        android:gravity="center"
        android:textColor="@drawable/white_text_color" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/go_back_to_main"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="1.5"
        android:background="@drawable/black_border_button"
        android:gravity="center"
        android:text="@string/main"
        android:textColor="@drawable/white_text_color" />

</LinearLayout>